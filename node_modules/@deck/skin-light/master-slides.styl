.title-page
  background-position center 90%
  background-repeat no-repeat
  background-size 60%
  justify-content inherit

  h1
    font-size 80px
    margin-top 30px
  h1:after
    display none
  h2
    font-size 42.5px
    letter-spacing 0.4px
    margin-top 34px
    letter-spacing 0
    -webkit-font-smoothing auto
  h3
    position absolute
    border 1.5px solid #888
    height 28px
    line-height 28px
    top 3px
    right 6px
    font-size 16.5px
    width 76px
    margin 0
  small
    position absolute
    bottom 1px
    left 3px
    font-size 10px
    width 50%
    text-align left
  img
     padding-top: 15%
  b, strong 
       color #1E90FF 
          
    
